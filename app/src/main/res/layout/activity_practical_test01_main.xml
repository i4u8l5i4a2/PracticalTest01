<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01MainActivity">

    <!-- Buton pentru navigare -->
    <Button
        android:id="@+id/buttonNavigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afișează Total"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonNavigate">

        <!-- EditText 1: stânga -->
        <EditText
            android:id="@+id/editTextTopLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="0"
            android:textSize="18sp"
            android:textAlignment="center"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:background="@android:drawable/edit_text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:saveEnabled="false" />

        <!-- EditText 2: dreapta -->
        <EditText
            android:id="@+id/editTextTopRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="0"
            android:textSize="18sp"
            android:textAlignment="center"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:background="@android:drawable/edit_text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:saveEnabled="false" />

        <!-- Buton 1: sub EditText stânga -->
        <Button
            android:id="@+id/buttonPressMe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Press me!" />

        <!-- Buton 2: sub EditText dreapta -->
        <Button
            android:id="@+id/buttonPressMeToo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Press me, too!" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>